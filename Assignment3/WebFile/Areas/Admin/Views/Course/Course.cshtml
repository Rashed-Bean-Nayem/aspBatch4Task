
@{
    ViewData["Title"] = "Course";
}
@model CourseData;
<div>
    <div class="col-md-6">
        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Course Form</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form method="post"  asp-area="Admin" asp-controller="Course" asp-action="Course">
                
                    <div class="form-group">
                        <label>Course Title</label>
                        <input asp-for="Title" class="form-control" placeholder="Title">
                    </div>
                    <div class="form-group">
                        <label>Seat Count</label>
                        <input asp-for="SeatCount" class="form-control"  placeholder="Seat Count">
                    </div>
                    <div class="form-group">
                        <label>Fee</label>
                        <input asp-for="Fee" class="form-control" placeholder="Fee">
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Add Course" class="btn btn-primary" />
                    </div>
            </form>
        </div>
        <!-- /.card -->
        <!-- Form Element sizes -->
        <!-- /.card-footer -->

    </div>

</div>

